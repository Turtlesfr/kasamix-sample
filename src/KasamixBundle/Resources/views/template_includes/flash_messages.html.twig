
{% trans_default_domain 'KasamixBundle' %}
{% for type, messages in app.session.flashBag.all %}
    {% for message in messages %}
        {% if type == 'success' %} {% set type = 'flash_message.success'|trans %}{% set class_type = 'success' %}{% endif %}
        {% if type == 'warning' %} {% set type = 'flash_message.warning'|trans %}{% set class_type = 'warning' %}{% endif %}
        {% if type == 'danger' %} {% set type = 'flash_message.danger'|trans %}{% set class_type = 'danger' %}{% endif %}
        {% if type == 'error' %} {% set type = 'flash_message.error'|trans %}{% set class_type = 'error' %}{% endif %}
        <div class="alert alert-{{ class_type }} alert-dismissible hideMe">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
            <b>{{ type|capitalize }} !</b> {{ message|trans }}
        </div>
    {% endfor %}
{% endfor %}